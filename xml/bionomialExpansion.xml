<body>
    <vertical>

        <horizontal>
            <floatfield weight="1" varname="coeffeciant1">1</floatfield>
            <p weight="1">x to the power of</p>
            <floatfield weight="1" varname="exponent1">1</floatfield>
        </horizontal>

        <horizontal>
            <floatfield weight="1" varname="coeffeciant2">2</floatfield>
            <p weight="1">x to the power of</p>
            <floatfield weight="1" varname="exponent2">0</floatfield>
        </horizontal>



        <p>all to the power of</p>
        <intfield varname="power">4</intfield>

        <seperator pady="5"/>
        <checkbutton varname="asendingPowers" default="true">Asending Powers</checkbutton>
        <seperator pady="5"/>

        <button callback="OnButtonPressed" keybind="*Return*">Calculate!</button>

        <seperator pady="5"/>

        <p font.size="24" varname="Output">Output</p>
    </vertical>

</body>